    {% if elements['page_edito_id'] %}
    <a class="TermDestinationDynamicMap-link" href="{{ path('entity.node.canonical', {'node': elements['page_edito_id'] }) }}" title="{{ 'Découvrir @term'|t({'@term': name.0["#context"].value}) }}">{{ 'Découvrir @term'|t({'@term': name.0["#context"].value}) }}</a>
    {% endif %}
  </article>
{% endif %}
