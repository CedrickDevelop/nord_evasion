{{ attach_library('nord_evasion_theme/termDestinationDynamicMap') }}
{% if content.field_terminology.0["#context"].value != 'all' %}
	<article class="TermDestinationDynamicMap swiper-slide" data-destination="{{ content.field_terminology.0["#context"].value }}">
		<h2>{{ name }}</h2>
		<h3>{{ content.field_subtitle }}</h3>
		<div class="TermDestinationDynamicMap-description">
			{{ content.field_description }}
		</div>
